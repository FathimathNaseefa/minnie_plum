<%- include("../../views/partials/admin/header") %>
<style>

 body {
    
    text-align: center;
} 
h1 {
    color: #333;
}

table {
    width: 80%;
    margin: auto;
    border-collapse: collapse;
    background: white;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

th, td {
    border: 1px solid #ddd;
    padding: 12px;
    text-align: center;
}

th {
    background-color: #007bff;
    color: white;
}

td {
    color: #555;
}

td a {
    background-color: #dc3545;
    padding: 6px 10px;
    font-size: 14px;
    border-radius: 4px;
}

td a:hover {
    background-color: #c82333;
}
#acoupon{
    display: inline-block;
    margin-bottom: 15px;
    padding: 10px 15px;
    text-decoration: none;
    background-color: #28a745;
    color: white;
    border-radius: 5px;
    font-weight: bold;
}
</style>
<body>
    <h1>Coupon Management</h1>

    <a href="/admin/add-coupon" id="acoupon">Add New Coupon</a>

    <table border="1">
        
        <tr>
            <th>Code</th>
            <th>Discount</th> 
            <th>Expiry</th>
            <th>Actions</th>
        </tr>
        <% coupons.forEach(coupon => { %>
            <tr>
                <td><%= coupon.code %></td>
                <td>
                    <% if (coupon.discountType === 'percentage') { %>
                        <%= coupon.discount %>%
                    <% } else { %>
                        â‚¹<%= coupon.discount %>
                    <% } %>
                </td>
                <td><%= new Date(coupon.expiry).toDateString() %></td>
                <td>
                    <a href="/admin/delete-coupon/<%= coupon._id %>" style="color:white;font-weight: bold;text-decoration: none;" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        <% }); %>
        
    </table>
    <%- include("../../views/partials/admin/footer") %>

<h2>Manage Referral Offers</h2>

<!-- Add Referral Offer Form -->
<form action="/admin/add-referral-offer" method="POST">
    <input type="number" name="discountPercentage" placeholder="Discount %" required>
    <input type="date" name="startDate" required>
    <input type="date" name="endDate" required>
    <button type="submit">Add Referral Offer</button>
</form>

<!-- List of Referral Offers -->
<table>
    <tr>
        <th>Discount</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Action</th>
    </tr>
    <% referralOffers.forEach(offer => { %>
        <tr>
            <td><%= offer.discountPercentage %>%</td>
            <td><%= offer.startDate.toDateString() %></td>
            <td><%= offer.endDate.toDateString() %></td>
            <td>
                <form action="/admin/delete-referral-offer" method="POST">
                    <input type="hidden" name="offerId" value="<%= offer._id %>">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    <% }); %>
</table>

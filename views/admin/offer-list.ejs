<!DOCTYPE html>
<html lang="en">
<head>
    <title>Offer Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 20px;
            padding: 20px;
            text-align: center;
        }
        
        h1 {
            color: #333;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background: white;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            overflow: hidden;
        }

        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: center;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }

        a {
            text-decoration: none;
            padding: 6px 10px;
            margin: 4px;
            border-radius: 4px;
            display: inline-block;
        }

        .edit-btn {
            background-color: #28a745;
            color: white;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
        }

        .add-btn {
            display: inline-block;
            background: #28a745;
            color: white;
            padding: 10px 20px;
            margin-top: 20px;
            font-size: 16px;
            border-radius: 5px;
            text-decoration: none;
        }

        .add-btn:hover {
            background: #218838;
        }

        .section-title {
            color: #333;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <h1>Offer Management</h1>

    <!-- Product Offers Table -->
    <h2 class="section-title">Product Offers</h2>
    <table>
        <tr>
            <th>Product</th>
            <th>Discount (%)</th>
            <th>Valid Until</th>
            <th>Actions</th>
        </tr>
        <% productOffers.forEach(offer => { %>
            <tr>
                <td><%= offer.productId.productName %></td>
                <td><%= offer.discount %> %</td>
                <td><%= offer.expiry ? new Date(offer.expiry).toDateString() : 'No Expiry' %></td>
                
                <td>
                    <a href="/admin/edit-offer/<%= offer._id %>" class="edit-btn">Edit</a>
                    <a href="/admin/delete-offer/<%= offer._id %>" class="delete-btn" onclick="return confirm('Delete this offer?')">Delete</a>
                </td>
            </tr>
        <% }); %>
    </table>

    <!-- Category Offers Table -->
    <h2 class="section-title">Category Offers</h2>
    <table>
        <tr>
            <th>Category</th>
            <th>Discount (%)</th>
            <th>Valid Until</th>
            <th>Actions</th>
        </tr>
        <% categoryOffers.forEach(offer => { %>
            <tr>
                <td><%= offer.categoryId.name %></td>
                <td><%= offer.discount %> %</td>
                
                <td><%= offer.expiry ? new Date(offer.expiry).toDateString() : 'No Expiry' %></td>

                <td> 
                    <a href="/admin/edit-offer/<%= offer._id %>" class="edit-btn">Edit</a>
                    <a href="/admin/delete-offer/<%= offer._id %>" class="delete-btn" onclick="return confirm('Delete this offer?')">Delete</a>
                </td>
            </tr>
        <% }); %>
    </table>

    <!-- Referral Offers Table -->
    <h2 class="section-title">Referral Offers</h2>
    <table>
        <tr>
            <th>Referral Code</th>
            <th>Discount (%)</th>
            <th>Valid Until</th>
            <th>Actions</th>
        </tr>
        <% referralOffers.forEach(offer => { %>
            <tr>
                <td><%= offer.referralCode %></td>
                <td><%= offer.discount %> %</td>
                <td><%= offer.expiry ? new Date(offer.expiry).toDateString() : 'No Expiry' %></td>
                <td>
                    <a href="/admin/edit-offer/<%= offer._id %>" class="edit-btn">Edit</a>
                    <a href="/admin/delete-offer/<%= offer._id %>" class="delete-btn" onclick="return confirm('Delete this offer?')">Delete</a>
                </td>
            </tr>
        <% }); %>
    </table>

    <a href="/admin/add-offer" class="add-btn">Add New Offer</a>
</body>
</html>
